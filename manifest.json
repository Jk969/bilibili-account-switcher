{
  "manifest_version": 3,
  "name": "B站账号切换助手",
  "version": "1.0",
  "description": "Bilibili多账号一键切换工具，支持Cookie管理",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "cookies",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "B站账号切换"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["floating.js"],
      "css": ["floating.css"],
      "run_at": "document_idle"
    }
  ]
}
